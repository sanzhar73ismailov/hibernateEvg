<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="hibernate.perClassUnion.Emp" table="emp122">
		<id name="id">
			<generator class="increment"></generator>
		</id>

		<property name="name"></property>

		<union-subclass
			name="hibernate.perClassUnion.RegularEmployee" table="regemp122">
			<property name="salary"></property>
			<property name="bonus"></property>
		</union-subclass>

		<union-subclass
			name="hibernate.perClassUnion.ContractEmployee" table="contemp122">
			<property name="payPerHour" column="pay_per_hour"></property>
			<property name="contractDuration" column="contract_duration"></property>
		</union-subclass>

	</class>
</hibernate-mapping>  