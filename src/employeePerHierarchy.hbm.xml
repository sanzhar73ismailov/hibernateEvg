<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="hibernate.perHierarchy.Emp" table="empperh"
		discriminator-value="emp">
		<id name="id">
			<generator class="identity"></generator>
		</id>

		<discriminator column="type" type="string"></discriminator>
		<property name="name" length="50"></property>

		<subclass name="hibernate.perHierarchy.RegularEmployee"
			discriminator-value="reg_emp">
			<property name="salary"></property>
			<property name="bonus"></property>
		</subclass>

		<subclass name="hibernate.perHierarchy.ContractEmployee"
			discriminator-value="con_emp">
			<property name="payPerHour" column="pay_per_hour"></property>
			<property name="contractDuration" column="contract_duration"></property>
		</subclass>

	</class>

</hibernate-mapping> 